<div class="container">
	<div class="row">
		<div class="col-lg-3" <style="background-color: white">
			<h2>User Info</h2>

			<table class="table table-hover" style="table-layout:fixed;">
					<tr>
						<td width="120px;">name</td>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<td width="120px;">introduction</td>
						<td><%= @user.introduction %></td>
					</tr>
			</table>

			<% if current_user == @user %>
			<%= link_to(edit_user_path(current_user.id), class: "btn btn-default") do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
			<% end %>

			<h1>New Book</h1>
			<% if @book.errors.any? %>
            ul{<% @book.errors.full_messages.each do |message| %>}

			<%= form_for(@book) do |f| %>
			<p>Title</p>
			<%= f.text_field :title, class: "edit-title" %>

			<p>Opinion</p>
			<%= f.text_area :opinion, class: "edit-opinion" %>
			<br>
			<%= f.submit 'Create Book', class: "btn-btn-primary" %>
			<% end %>
		</div>

		<div class="col-lg-9">
			<h1>Books</h1>

			<table class="table table-striped">
				<thead>
					<tr>
						<th><p>Image</p></th>
						<th><p>Title</p></th>
						<th><p>Opinion</p></th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>