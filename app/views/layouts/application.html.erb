<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header" id="header">
      <nav class="nav-top clearfix">
        <h2>Bookers</h2>
        <div class="slidemenu">
          <ul class="nav navbar-nav navbar-right" date-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
            <% if user_signed_in? %>
            <!-- 後ほど編集 -->
            <li class="">
              <%= link_to 'Home', user_path(current_user), class: "glyphicon glyphicon-home" %>
            </li>
            <li class="">
              <%= link_to 'Users', users_path, class: "glyphicon glyphicon-user" %>
            </li>
            <li class="">
              <%= link_to 'Books', books_path, class: "glyphicon glyphicon-book" %>
            </li>
            <li class="">
              <%= link_to 'logout', destroy_user_session_path, class: "glyphicon glyphicon-log-out", method: :delete %>
            </li>

            <% else %>
            <li class="">
              <%= link_to 'Home', "/", class: "glyphicon glyphicon-home" %>
            </li>
            <li class="">
              <%= link_to 'About', home_about_path, class: "glyphicon glyphicon-link" %>
            </li>

            <li class="">
              <%= link_to 'sign up', new_user_registration_path, class: "glyphicon glyphicon-edit" %>
            </li>
            <li class="">
              <%= link_to 'login', new_user_session_path, class: "glyphicon glyphicon-log-in" %>
            </li>

            <% end %>
          </ul>
        </div>
      </nav>
    </div>

    <%= yield %>

  <footer>
    <div class="footer-text">CopyRight Infratop.inc</div>
  </footer>

  </body>

</html>
