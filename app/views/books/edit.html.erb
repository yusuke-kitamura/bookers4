<div class="book-edit">
	<h1>Editing Book</h1>

	<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Opinion</h4>
	<%= f.text_area :opinion %>
	<p></p>
	<%= f.submit "Update Book" %>
	<% end %>
	<p></p>

	<%= link_to "show", book_path %>
	|
	<%= link_to "back", books_path %>
</div>